{
  "manifest_version": 3,
  "name": "Les Duels de l'IA",
  "version": "1.0.0",
  "description": "A Chrome extension to assist facilitators running the Les Duels de l'IA workshop",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["*://comparia.beta.gouv.fr/*"],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://comparia.beta.gouv.fr/arene/*"],
      "js": ["js/content-wrapper.js"],
      "css": ["css/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/*.css",
        "js/content-module.js",
        "js/modules/*.js",
        "config/*.json"
      ],
      "matches": ["*://comparia.beta.gouv.fr/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}